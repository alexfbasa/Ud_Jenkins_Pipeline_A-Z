pipeline {
    agent any
    environment {
        DEPLOY_TO = '${foo}'
    }
    stages {
        stage('Build') {
            when {
                environment name: 'DEPLOY_TO', value: 'Producao'
            }
            steps {
                echo 'Deploying'
            }
        }
    }
}
