pipeline {
    agent any
    stages {
        stage('Build') {
            option {
                retry(3)
            }
            steps {
                echo 'Before setting current build to FAILURE'
                script {
                    currentBuild.result = 'FAILURE'
                }
                echo 'Finalizando a Build'
                echo 'After setting current build to FAILURE'
            }
        }
    }
}

/*
currentBuild.result eh uma variavel do Jenkins
 */