/*
Voce pode definir variaveis a nivel globla e a nivel do step que serao consumidas
e depois descartadas
 */
/* Essas variaveis serao definidas no Jenkins habilitando a opcao
[] This project is parameterized
Crie uma variavel user e packageType

 */
pipeline {
    agent any
    environment {
        // $VARIAVEL = variavel do codigo ira receber
        // variavel = variavel do parametro passado na build
        BRANCH = "${branch}"

    }
    stages {
        stage('Build Master') {
            when {
                branch 'main'
            }
            steps {
                echo "Building Deploying Master ${branch}"
            }
        }
        stage('Build Dev') {
            when {
                branch 'dev'
            }
            steps {
                echo "Building Deploying Dev ${branch}"
            }
        }
    }
}
