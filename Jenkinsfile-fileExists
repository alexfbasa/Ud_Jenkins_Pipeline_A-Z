pipeline{
    agent any
    environment{
        MY_FILE = fileExists "$FILE_NAME"
    }
    stages{
        stage('conditional if exists'){
            when { expression  { MY_FILE == 'true' } }
            steps {
                echo "file $MY_FILE exists"
            }
        }
        stage('conditional if not exists'){
            when { expression  { MY_FILE == 'false' } }
            steps {
                echo "file $MY_FILE does not exist"
            }
        }
    }
}