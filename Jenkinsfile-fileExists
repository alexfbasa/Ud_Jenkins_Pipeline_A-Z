pipeline{
    agent any
    environment{
        MY_FILE = fileExists '/etc/environment'
    }
    stages{
        stage('conditional if exists'){
            when { frase { MY_FILE == 'true' } }
            steps {
                echo "file exists"
            }
        }
        stage('conditional if not exists'){
            when { frase { MY_FILE == 'false' } }
            steps {
                echo "file does not exist"
            }
        }
    }
}