def file = $FILE_NAME
pipeline{
    agent any

    stages{
        stage('conditional if exists'){
            when { expression  { $file == 'true' } }
            steps {
                echo "file $file exists"
            }
        }
        stage('conditional if not exists'){
            when { expression  { $file == 'false' } }
            steps {
                echo "file $file does not exist"
            }
        }
    }
}