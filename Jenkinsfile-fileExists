pipeline {
    agent any

    stages {
        stage('Build') {
            tools {
                maven 'Maven 3'
            }
            steps {
                sh 'mvn --version'
            }
        }
        stage('Check for existence of file') {
            if (fileExists("$FILE_DIR"))
                echo "File $FILE_DIR found!"
            else
                echo "File was not found!"
        }
    }
}
